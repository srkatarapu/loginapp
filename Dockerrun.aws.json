{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
        {
            "name": "mysql-server",
            "image": "mysql:5.7",
            "hostname": "mysql-server",
            "environment": [
                {
                    "name": "MYSQL_ROOT_PASSWORD",
                    "value": "password"
                },
                {
                    "name": "MYSQL_DATABASE",
                    "value": "logindb"
                }
            ],
			"Ports": [
			    {
                 "ContainerPort": 3306,
                 "HostPort": 3306
                }
			]
            "memory": 500,
            "essential": true
        },
        {
            "name": "loginapp",
            "image": "srinivask61/loginapp",
            "environment": [
                {
                    "name": "MSHOST",
                    "value": "mysql-server"
                },
                {
                    "name": "MSDATABASE",
                    "value": "logindb"
                },
                {
                    "name": "MSUSER",
                    "value": "root"
                },
                {
                    "name": "MSPASSWORD",
                    "value": "password"
                },
                {
                    "name": "SERVERPORT",
                    "value": "8888"
                },
                {
                    "name": "WAIT_HOSTS",
                    "value": "mysql-server:3306"
                },
                {
                    "name": "WAIT_HOSTS_TIMEOUT",
                    "value": "200"
                }
			"PortMappings":[
                {  
                    "ContainerPort": 8888,
                    "HostPort": 80
                }
            ],
            ],
            "links": [
                "mysql-server"
				"logindb"
            ],
            "memory": 128,
            "essential": false
        }
    ]
}
